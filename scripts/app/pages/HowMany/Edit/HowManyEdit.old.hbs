<h1>Actions</h1>
<div class="row alert">
	<div class="span1 offset1">
		<a class="btn btn-block btn-danger" data-toggle="modal" href="#removeHowManyModal" role="button"><i class="icon-trash"></i><br />Remove</a>
	</div>
	<div class="span3 offset1">
		{{#linkTo 'HowManys.index' class="btn btn-block btn-warning"}}<i class="icon-undo"></i><br />Cancel{{/linkTo}}
	</div>
	<div class="span4 offset1">
		{{#linkTo 'HowManys.index' class="btn btn-block btn-success"}}<i class="icon-save icon-2x"></i><br />Save{{/linkTo}}
	</div>
</div>



